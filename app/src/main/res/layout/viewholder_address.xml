<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vh_address_ic_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="19dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_save"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/vh_address_nameAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="Hi"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vh_address_ic_save"
        app:layout_constraintEnd_toStartOf="@id/vh_address_deleteButton"/>

    <TextView
        android:id="@+id/vh_address_detailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="87/17 Tân Lập, khu phố Tân Lập, Dĩ An, Bình Dương, Việt Nam"
        android:textColor="#757575"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/vh_address_deleteButton"
        app:layout_constraintStart_toEndOf="@+id/vh_address_ic_save"
        app:layout_constraintTop_toBottomOf="@id/vh_address_nameAddress" />

    <TextView
        android:id="@+id/vh_address_userNameAndTelephone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Nhật Bích 0333217598"
        android:textColor="#757575"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/vh_address_deleteButton"
        app:layout_constraintStart_toEndOf="@+id/vh_address_ic_save"
        app:layout_constraintTop_toBottomOf="@id/vh_address_detailAddress" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vh_address_deleteButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_trash" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>