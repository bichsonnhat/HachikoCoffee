<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_saved_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.SavedAddressActivity">
        <Button
            android:id="@+id/btnSavedAddressBack"
            app:backgroundTint="@null"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="Địa chỉ đã lưu"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/btnHomeAddresss"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="62dp"
            android:background="@color/white"
            app:backgroundTint="@null" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="86dp"
            android:background="@drawable/ic_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm địa chỉ nhà"
            android:textSize="16sp"
            android:layout_marginTop="86dp"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/line1"
            android:layout_below="@+id/btnHomeAddresss"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="70dp"/>

        <Button
            android:layout_below="@+id/line1"
            android:id="@+id/btnCompanyAddress"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:backgroundTint="@null"
            android:background="@color/white"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="157dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/ic_company"/>

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm địa chỉ công ty"
            android:textSize="16sp"
            android:layout_marginTop="157dp"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/btnCompanyAddress"/>

        <Button
            android:id="@+id/btnNewAddress"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:backgroundTint="@null"
            android:background="@color/white"
            android:layout_below="@+id/line2"/>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="233dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/ic_plus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm địa chỉ mới"
            android:textSize="16sp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="70dp"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_saved_addresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNewAddress" />
</RelativeLayout>