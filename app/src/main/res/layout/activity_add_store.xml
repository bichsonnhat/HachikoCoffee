<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    tools:context=".Activity.AddStoreActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarCatergoryManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm cửa hàng mới"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/storeMgmt_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/background_item"
            android:padding="5dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#939393"
        app:layout_constraintTop_toBottomOf="@+id/topBarCatergoryManagement"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Tên cửa hàng*"
            android:textColor="#686363"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/storeMgmt_addName"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_note"
            android:hint="Nhập tên cửa hàng"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:lines="2"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingStart="16dp"
            android:paddingEnd="18sp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình ảnh*"
            android:textColor="#686363"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/storeMgmt_addName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/storeMgmt_addImageURL"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_note"
            android:hint="Nhập link hình ảnh"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:lines="2"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingStart="16dp"
            android:paddingEnd="18sp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kinh độ*"
            android:textColor="#686363"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/storeMgmt_addImageURL"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/storeMgmt_addLongtitude"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_note"
            android:hint="Nhập kinh độ"
            android:layout_marginTop="8dp"
            android:inputType="numberDecimal"
            android:lines="2"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingStart="16dp"
            android:paddingEnd="18sp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/longitude"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vĩ độ*"
            android:textColor="#686363"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/storeMgmt_addLongtitude"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/storeMgmt_addLatitude"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_note"
            android:hint="Nhập vĩ độ"
            android:layout_marginTop="8dp"
            android:inputType="numberDecimal"
            android:lines="2"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingStart="16dp"
            android:paddingEnd="18sp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latitude"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ*"
            android:textColor="#686363"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/storeMgmt_addLatitude"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/storeMgmt_addAddress"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_note"
            android:hint="Nhập địa chỉ"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:lines="2"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingStart="16dp"
            android:paddingEnd="18sp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address"
            tools:ignore="TextFields" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/storeMgmt_addConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/order_button"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Xong"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storeMgmt_addAddress" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>