<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shortcutLayout"
    android:layout_width="87.5dp"
    android:layout_height="95dp"
    android:background="@drawable/background_item"
    android:elevation="3dp"

    >

    <ImageView
        android:id="@+id/shortcutPic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/shipping"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/shortcutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:maxLines="2"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/shortcutPic"
        app:layout_constraintStart_toStartOf="@+id/shortcutPic"
        app:layout_constraintTop_toBottomOf="@+id/shortcutPic" />
</androidx.constraintlayout.widget.ConstraintLayout>